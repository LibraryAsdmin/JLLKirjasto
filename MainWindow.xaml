                    <SkewTransform/>
                    <RotateTransform/>
                    <TranslateTransform X="{DynamicResource negativeScreenWidth}"/>
                </TransformGroup>
            </Grid.RenderTransform>
            <ListBox x:Name="listBox" HorizontalAlignment="Left" Margin="47.143,268.857,0,31.715" Width="356.571" BorderBrush="#00ABADB3" Background="Transparent" BorderThickness="0" FontSize="26.667">
